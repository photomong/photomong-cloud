rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /kiosks/{kioskId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == kioskId;
      allow read: if request.auth != null;
    }
    match /releases/{file} {
      allow read: if true; // 앱 업데이트 배포 파일 공개 다운로드
    }
  }
}


